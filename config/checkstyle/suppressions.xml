<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">
<suppressions>
    <!--Do not check test classes -->
    <suppress checks="Javadoc*" files=".*test.*"/>
    <suppress checks="Javadoc*" files=".*integrationTest.*"/>

    <!--Generated code-->
    <suppress checks="[a-zA-Z0-9]*" files="com[\\/]mongodb[\\/]spark[\\/]connector[\\/]Versions.java" />
    <!--Cross Build Code, checkstyle don't understand properly added sources.-->
    <suppress checks="JavadocPackage" files="com[\\/]mongodb[\\/]spark[\\/]sql[\\/]connector[\\/]schema[\\/]JavaToScala.java" />
</suppressions>
